<% if (title) { %>
  <h1><%= title %></h1>
<% } else {
  res.redirect('/')
} %>

<%- messages() %>

<% if (errors) { %>
<ul class="warning">
  <% errors.array().forEach(error => { %>
    <li><%= error.msg %></li>
  <%  }) %>
</ul>
<% } %>

<h2>Welcome, <%- locals.accountData.account_firstname %></h2>

<p>You're Logged in.</p>

<% if (locals.accountData.account_type != "Client") { %>
  <h3>Inventory Management</h3>
  <a href="/inv">Inventory mangement view</a>
<% } %>

<h3>Account Details</h3>
<a href="/account/update/<%- locals.accountData.account_id %>">Update account information</a>
