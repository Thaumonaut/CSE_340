<% if (title) { %>
    <h1><%= title %></h1>
<% } else {
    res.redirect('/')
} %>

<%- messages() %>

<% if (errors) { %>
  <ul class="warning">
    <% errors.array().forEach(error => { %>
      <li><%= error.msg %></li>
    <%  }) %>
  </ul>
<% } %>

<form id="loginForm" action="/account/login" method="post">
    <h2 class="full-width"><%- title %></h2>
    <div>
      <label for="account_email">Email:</label>
      <input type="email" id="account_email" name="account_email" required value="<%= locals.account_email %>">
    </div>
    
    <div>
      <label for="account_password">Password:</label>
      <input type="password" id="account_password" name="account_password" pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$" required>
    </div>
      
    <button type="submit" class="full-width">Login</button>
    <p class="form-signup full-width">No Account? <a href="/account/register">Sign-up</a></p>
</form>
